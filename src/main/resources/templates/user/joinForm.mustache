{{>/layout/main-header}}

<div class="container">
    <div class="my_auth_box">
        <div class="my_auth_form_box">
            <div class="my_auth_form_box_title">JStory</div>
            <div class="my_error_box my_hidden"></div>

            <form id="joinSubmit" action="/join" method="post">
                <div class="username_box">
                    <input id="username" class="my_auth_form_box_input" type="text" name="username" placeholder="유저네임"
                           maxlength="20" value="ssar" required/>
                    <button type="button" class="button-common username_btn" id="checkUsername">중복체크</button>
                </div>
                <div class="message" id="existsByUsername"></div>
                <input id="password" class="my_auth_form_box_input" type="password" name="password" placeholder="비밀번호"
                       maxlength="20" value="1234" required/>
                <input id="passwordCheck" class="my_auth_form_box_input" type="password" name="passwordCheck"
                       placeholder="비밀번호 확인"
                       maxlength="20" value="1234" required/>
                <div class="message" id="passCheck"></div>
                <div class="email_box">
                    <input id="email" class="my_auth_form_box_input" type="email" name="email" placeholder="이메일" maxlength="60"
                           value="khh8500@naver.com" required/>
                    <button type="button" class="button-common email_btn" id="checkEmail">메일인증</button>
                </div>
                <div class="email_verification_box" id="emailVerification" style="display: none">
                    <input class="my_auth_form_box_input" type="text" id="emailVerificationCode" placeholder="인증번호 6자리" maxlength="6" />
                    <button type="button" class="button-common verification_btn" id="checkCode">인증확인</button>
                </div>
                <div class="message" id="auth-email"></div>
                <button type="submit" class="my_secondary_btn">회원가입</button>
            </form>

            <div class="my_auth_form_box_link">
                <div><a href="/login-form">로그인</a></div>
                <div><a href="/user/password-reset-form">비밀번호 찾기</a></div>
            </div>
        </div>
    </div>
    <br/>
</div>

<script src="/js/joinForm.js"></script>

{{>/layout/footer}}