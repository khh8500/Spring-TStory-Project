{{>/layout/main-header}}

<input type="hidden" id="userId" value="">

<div class="container">
    <div class="my_auth_box">
        <div class="my_auth_form_box">
            <div class="d-flex justify-content-center">

                <img src="https://i1.sndcdn.com/avatars-000373392764-zp0p80-t500x500.jpg"
                    class="my_profile_rounded_img_btn_lg" id="profile-img-btn_lg">

                <form id="fileForm">
                    <input type="file" class="my_hidden" id="profile-img-input" name="profileImgFile" />
                </form>
            </div>
            <div class="my_error_box my_hidden">

            </div>
            <!-- 수정은 put 요청 fetch 사용해야함 -->
            <form id="updateForm">

                <input id="username" name="username" class="my_auth_form_box_input" type="text" placeholder="유저네임" maxlength="20" value="{{sessionUser.username}}"
                    required readonly />
                <div class="message" id="message-usernameCheck"></div>
                <input id="password" name="password" class="my_auth_form_box_input" type="password" placeholder="기존 비밀번호" maxlength="20"
                    required />
                <div class="message" id="message-passwordCheck"></div>
                <input id="newPassword" name="newPassword" class="my_auth_form_box_input" type="password" placeholder="수정 비밀번호"
                    maxlength="20" required />
                <input class="my_auth_form_box_input" type="email" name="email" placeholder="이메일" maxlength="60" value="{{sessionUser.email}}"
                    required readonly />
                <button type="submit" class="my_secondary_btn">회원정보수정</button>
            </form>
            <div class="my_auth_form_box_link">
                <div><a href="/login-form">로그인</a></div>
                <div><a href="/user/password-reset-form">비밀번호 찾기</a></div>
            </div>
        </div>
    </div>
    <br />
</div>

<script src="/js/updateForm.js"></script>

{{>/layout/footer}}